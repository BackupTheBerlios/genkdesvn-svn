--- startkde	2005-02-23 12:24:24.000000000 +0100
+++ startkde	2005-03-10 12:00:05.000000000 +0100
@@ -14,6 +14,43 @@
 	exit 1
 fi
 
+# Gentoo part:
+export PATH="/usr/kde/devel/bin:${PATH}"
+
+cd ${HOME}
+if [ -L .kde -o ! -d .kde ]; then
+	# handle ~/.kde* dirs - separate ones for separate KDEs
+	[ -d .kde ] && mv .kde .kde.backup
+	if [ ! -e .kdedevel ]; then
+		# migrate old config files
+		if [ -e .kdecvs ]; then
+			cp -r .kdecvs .kdedevel
+       elif [ -e .kde3.4 ]; then
+           cp -r .kde3.4 .kdedevel
+		elif [ -e .kde3.3 ]; then
+			cp -r .kde3.3 .kdedevel
+		elif [ -e .kde3.2 ]; then
+			cp -r .kde3.2 .kdedevel
+       else
+			mkdir .kdedevel
+		fi
+		for file in share/apps/kdevdocumentation/search/htdig.conf \
+			    share/apps/kalarmd/clients \
+			    share/config/kdevdocumentationrc \
+			    share/config/katesyntaxhighlightingrc \
+			    share/config/ksysguardrc \
+			    share/config/kresources/calendar/stdrc \
+			    share/config/ksmserverrc \
+			    share/config/kcalrc; do
+			if [ -e ".kdedevel/${file}" ]; then
+				sed -i -e "s:$HOME/\.kde3\.[23]:$HOME/\.kdedevel:g" \
+				       -e 's:$HOME/\.kde3\.[23]:$HOME/\.kdedevel:g' \
+					".kdedevel/${file}"
+			fi
+		done
+	fi
+	ln -sf .kdedevel .kde
+fi
+# Gentoo part ends
